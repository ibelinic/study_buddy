<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backtopreviousButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:contentDescription="Back"
        android:src="@drawable/ic_arrow_back" />

    <TextView
        android:id="@+id/detaljiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Detalji odgovorne osobe"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/detaljiTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:contentDescription="Person's Photo" />

    <TextView
        android:id="@+id/ime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photoImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="Ime:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Email"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/prezime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imeTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Prezime:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/prezimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prezime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Prezime"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/akademskatitula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prezimeTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Akademska titula:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/akademskatitulaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/akademskatitula"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Akademska titula"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/radnoVrijeme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/akademskatitulaTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Radno vrijeme:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/radnoVrijemeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radnoVrijeme"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Radno vrijeme"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radnoVrijemeTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Email:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/imeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Ime"
        android:textSize="18sp" />

</RelativeLayout>
